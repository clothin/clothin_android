<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="si.cit.clothingorigin.Activities.ItemDetailsActivity"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/list_row_bg"
            android:padding="16dp"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/product_picture"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:scaleType="fitStart"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    tools:src="@color/colorPrimary"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    >
                    <si.cit.clothingorigin.views.FontView
                        android:id="@+id/product_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Item name"
                        app:customFont="LatoBlack"
                        android:textSize="9pt"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <si.cit.clothingorigin.views.FontView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            app:customFont="LatoBlack"
                            />

                        <si.cit.clothingorigin.views.FontView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3.99â‚¬"
                            app:customFont="LatoItalic"
                            style="@style/productDetailField"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <si.cit.clothingorigin.views.FontView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size:"
                            app:customFont="LatoBlack"
                            />

                        <si.cit.clothingorigin.views.FontView
                            android:id="@+id/product_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="M"
                            app:customFont="LatoItalic"
                            style="@style/productDetailField"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <si.cit.clothingorigin.views.FontView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color:"
                            app:customFont="LatoBlack"
                            />

                        <si.cit.clothingorigin.views.FontView
                            android:id="@+id/product_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="White"
                            app:customFont="LatoItalic"
                            style="@style/productDetailField"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <si.cit.clothingorigin.views.FontView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Materials:"
                            app:customFont="LatoBlack"
                            />

                        <si.cit.clothingorigin.views.FontView
                            android:id="@+id/product_materials"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Gum"
                            app:customFont="LatoItalic"
                            style="@style/productDetailField"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <si.cit.clothingorigin.views.FontView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sold by:"
                            app:customFont="LatoBlack"
                            />

                        <si.cit.clothingorigin.views.FontView
                            android:id="@+id/product_soldBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Harrods"
                            app:customFont="LatoItalic"
                            style="@style/productDetailField"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@drawable/list_row_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <si.cit.clothingorigin.views.FontView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ECO Score: "
                    app:customFont="LatoHeavy"
                    android:gravity="right"
                    android:layout_weight="1"
                    />
                <si.cit.clothingorigin.views.FontView
                    android:id="@+id/product_eco_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="10/30"
                    app:customFont="LatoMedium"
                    android:gravity="left"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/product_score_recycle"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    tools:src="@drawable/ic_emoji_good"
                    />
                <ImageView
                    android:id="@+id/product_score_air"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    tools:src="@drawable/ic_emoji_neutral"
                    />
                <ImageView
                    android:id="@+id/product_score_water"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    tools:src="@drawable/ic_emoji_bad"
                    />
            </LinearLayout>

            <si.cit.clothingorigin.views.FontView
                android:id="@+id/product_eco_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ECO reward: 10 CLO"
                android:gravity="center"
                app:customFont="LatoHeavy"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/production_chain_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
